<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="کد فعال سازی را وارد کنید"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dialog_component_marginTop"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/code_edit_text"
        android:hint="کد فعالسازی"
        android:textSize="@dimen/phone_edit_text_size"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_component_marginTop"
        android:layout_marginBottom="@dimen/dialog_component_marginBottom"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:textDirection="rtl"
        android:gravity="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:hint="کد را دریافت نکردید؟"
        android:paddingLeft="160dp"
        android:textAlignment="textStart"
        android:gravity="start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dialog_component_marginTop"
        android:layout_marginBottom="@dimen/dialog_component_marginBottom">



        <Button
            android:id="@+id/phone_correction_botton"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/phone_correction"
            android:textColor="#3B89D2"
            android:textSize="@dimen/textSize" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#3B89D2"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize" />

    </LinearLayout>

</LinearLayout>