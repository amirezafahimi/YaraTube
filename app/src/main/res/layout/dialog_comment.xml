<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <RatingBar
        android:id="@+id/comment_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_marginTop="@dimen/dialog_component_marginTop"
        android:pointerIcon="@drawable/ic_star_black_24dp"
        android:stepSize="1"/>

    <EditText
        android:id="@+id/comment_edit_text"
        android:hint="نظر"
        android:textSize="@dimen/comment_edit_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_component_marginTop"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:textDirection="rtl"/>

    <Button
        android:id="@+id/send_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_component_marginTop"
        android:backgroundTint="#3B89D2"
        android:text="@string/send"
        android:textSize="@dimen/textSize"
        android:textColor="@color/white" />

</LinearLayout>